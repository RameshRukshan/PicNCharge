<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".addCard">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/curved_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_nav_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_home_24"
            android:padding="5dp"
            android:text="Home"
            android:textColor="#009688" />

        <Button
            android:id="@+id/btn_nav_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_pin_drop_24"
            android:padding="5dp"
            android:text="Map"
            android:textColor="#009688" />

        <Button
            android:id="@+id/btn_nav_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_person_24"
            android:padding="5dp"
            android:text="Profile"
            android:textColor="#009688" />

        <Button
            android:id="@+id/btn_nav_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_notifications_24"
            android:padding="5dp"
            android:text="Notification"
            android:textColor="#009688" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="197dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/logo_full_1"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="39dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="74dp"
        android:layout_height="181dp"
        app:srcCompat="@drawable/profile"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="-35dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit or Debit Card"
        android:textColor="#0AB9CF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="105dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="292dp"
        android:layout_height="171dp"
        app:srcCompat="@drawable/download_removebg_preview__1_"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="147dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="344dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVC"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month / Year"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="403dp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="161dp"
        android:layout_height="32dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="500dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="344dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="349dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="172dp"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="498dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="104dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/master_cad"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="413dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="352dp"
        android:layout_height="42dp"
        android:backgroundTint="#00BCD4"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:iconTint="#00BCD4"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="543dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="352dp"
        android:layout_height="42dp"
        android:backgroundTint="#FA5151"
        android:text="Button"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="585dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name on Card"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="330dp" />

</androidx.constraintlayout.widget.ConstraintLayout>