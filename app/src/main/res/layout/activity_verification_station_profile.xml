<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".Verification_Station_Profile">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_full_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Verify Station"
                    android:textAlignment="center"
                    android:textColor="#00A9AB"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <TextView
                    android:id="@+id/textViewLine"
                    android:layout_width="320dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="13dp"
                    android:text="____________________________________________________"
                    android:textColor="#CC000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/txt_verification_otp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="373dp"
                    android:layout_height="88dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="1dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/curved_background"
                            app:srcCompat="@drawable/photoicon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="211dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="1dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_upload_photo"
                            android:layout_width="203dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:text="Upload a photo of your Charging Station"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="118dp" />

                        <TextView
                            android:id="@+id/textView_upload_photo2"
                            android:layout_width="211dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="-1dp"
                            android:text="*this photo will be used as a cover image of your charging station and can be change any time"
                            android:textSize="10sp"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="118dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="373dp"
                    android:layout_height="88dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="1dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/curved_background"
                            app:srcCompat="@drawable/photoicon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="211dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="1dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_upload_document"
                            android:layout_width="201dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:text="Upload Document to Proof your Charging Station Registration"
                            android:textAlignment="textStart"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="118dp" />

                        <TextView
                            android:id="@+id/textView_upload_document_text"
                            android:layout_width="201dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:text="*this Document will not be published anywhere, verification purposes only."
                            android:textSize="10sp"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="118dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="241dp"
                        android:layout_height="32dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="1dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/ckeckbox1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </CheckBox>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="211dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView_ckeckbox1_text"
                                android:layout_width="201dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="1dp"
                                android:text="Agree to Terms and Conditions."
                                android:textSize="10sp"
                                tools:layout_editor_absoluteX="38dp"
                                tools:layout_editor_absoluteY="118dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="241dp"
                        android:layout_height="32dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="1dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">
                            <CheckBox
                                android:id="@+id/ckeckbox2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </CheckBox>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="211dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView_ckeckbox2_text"
                                android:layout_width="201dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="1dp"
                                android:text="Your Station will be reviewed by users, are you agree to be reviewed."
                                android:textSize="10sp"
                                tools:layout_editor_absoluteX="38dp"
                                tools:layout_editor_absoluteY="118dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="284dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/ckeckbox3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </CheckBox>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView_ckeckbox3_text"
                                android:layout_width="221dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:text="Agree to update port availability time to time and payment and maintenance details accurately."
                                android:textSize="10sp"
                                tools:layout_editor_absoluteX="38dp"
                                tools:layout_editor_absoluteY="118dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewtext1"
                        android:layout_width="336dp"
                        android:layout_height="107dp"
                        android:layout_marginTop="10dp"
                        android:text="Your documents will be checking by our admins and ones those are approved your profile will get notification soon, after that your profile will be switch as a station profile and then you can customize your Station profile. "
                        android:textAlignment="center"
                        tools:layout_editor_absoluteX="64dp"
                        tools:layout_editor_absoluteY="352dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="246dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_contact1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Call"
                            tools:layout_editor_absoluteX="64dp"
                            tools:layout_editor_absoluteY="352dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_contact2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="2dp"
                            android:text="011 69 80 110"
                            android:textColor="#00A9AB"
                            tools:layout_editor_absoluteX="64dp"
                            tools:layout_editor_absoluteY="352dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_contact3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="1dp"
                            android:text="for More info."
                            tools:layout_editor_absoluteX="64dp"
                            tools:layout_editor_absoluteY="352dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_verification_station_continue"
                            android:layout_width="138dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#00A9AB"
                            android:text="Continue"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_verification_station_back"
                            android:layout_width="138dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="#F46060"
                            android:text="Back"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>