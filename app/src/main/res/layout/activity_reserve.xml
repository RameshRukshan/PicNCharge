<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".reserve">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_full_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:text="Reserve Port"
                android:textAlignment="center"
                android:textColor="#00A9AB"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                android:background="@drawable/curved_background"
                android:gravity="center_horizontal|center_vertical">
                <TextView
                    android:id="@+id/lbl_reserve_port_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450 LKR per Hour"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:paddingTop="20dp"
                    android:textColor="#00A9AB"/>
                <ImageView
                    android:id="@+id/img_reserve_port"
                    android:layout_width="148dp"
                    android:layout_height="106dp"
                    app:srcCompat="@drawable/type_1__sae_j1772_" />
                <TextView
                    android:id="@+id/lbl_reserve_port_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tesla Supercharger"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    android:paddingBottom="20dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbl_reserve_charging_station_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CS Name"
                        android:textAlignment="textStart"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/lbl_reserve_available_poorts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 Slot Available"
                        android:textAlignment="textEnd"
                        android:textColor="#00A9AB"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-5dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_add_vehicle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:text="Vehicle Number :"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="176dp" />

                <EditText
                    android:id="@+id/txt_reserve_vehicle_no"
                    android:layout_width="179dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/curved_background"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="204dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="-5dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_add_vehicle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:text="Date for Reservation:"
                    android:textAlignment="textStart"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="176dp" />

                <EditText
                    android:id="@+id/txt_reserve_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/curved_background"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="204dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="-5dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:text="Time for Reservation:"
                    android:textAlignment="textStart"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="176dp" />

                <EditText
                    android:id="@+id/txt_reserve_time"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/curved_background"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="204dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-5dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_charging_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="35dp"
                    android:text="Number of Hours :"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="176dp" />

                <EditText
                    android:id="@+id/txt_reserve_hours"
                    android:layout_width="179dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/curved_background"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="204dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-5dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_reserve_charge_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
                    android:text="Your Charging Fee Will Be 450 LKR"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="176dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_reserve_reserve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:backgroundTint="#00A9AB"
                    android:text="Reservce"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_login_password" />

                <Button
                    android:id="@+id/btn_reserve_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:backgroundTint="#F46060"
                    android:text="Cancel"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_login_login" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/curved_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_nav_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_home_24"
            android:padding="5dp"
            android:text="Home"
            android:textColor="#009688" />

        <Button
            android:id="@+id/btn_nav_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_pin_drop_24"
            android:padding="5dp"
            android:text="Station"
            android:textColor="#009688" />

        <Button
            android:id="@+id/btn_nav_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_person_24"
            android:padding="5dp"
            android:text="Profile"
            android:textColor="#009688" />

        <Button
            android:id="@+id/btn_nav_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_notifications_24"
            android:padding="5dp"
            android:text="Notification"
            android:textColor="#009688" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>